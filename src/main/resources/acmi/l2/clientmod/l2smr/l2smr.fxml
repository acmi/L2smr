<!--suppress JavaFxDefaultTag -->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="acmi.l2.clientmod.l2smr.Controller">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0"
              prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <GridPane hgap="2.0" vgap="2.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="L2 Folder">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="l2Path" GridPane.columnIndex="1"/>
                        <Button mnemonicParsing="false" onAction="#chooseL2Folder" text=".." GridPane.columnIndex="2">
                            <tooltip>
                                <Tooltip text="Choose L2 folder (CTLR+O)"/>
                            </tooltip>
                        </Button>
                        <Label text="UNR" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets/>
                            </GridPane.margin>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <ComboBox fx:id="unrChooser" prefWidth="150.0"/>
                                <CheckBox fx:id="oldFormat" mnemonicParsing="false" text="old format"/>
                            </children>
                        </HBox>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </VBox.margin>
                </GridPane>
                <SplitPane dividerPositions="0.5025062656641605" VBox.vgrow="ALWAYS">
                    <items>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <TableView fx:id="table" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0"
                                           prefHeight="0.0" prefWidth="0.0" VBox.vgrow="SOMETIMES">
                                    <columns>
                                        <TableColumn fx:id="actorColumn" maxWidth="4000.0" prefWidth="75.0"
                                                     text="Actor"/>
                                        <TableColumn fx:id="staticMeshColumn" maxWidth="6000.0" prefWidth="75.0"
                                                     text="StaticMesh"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <contextMenu>
                                        <ContextMenu>
                                            <items>
                                                <MenuItem mnemonicParsing="false" onAction="#modify" text="Modify"/>
                                                <SeparatorMenuItem/>
                                                <MenuItem mnemonicParsing="false" onAction="#copyNameToClipboard"
                                                          text="Copy SM name"/>
                                                <SeparatorMenuItem/>
                                                <MenuItem mnemonicParsing="false" onAction="#importSM" text="Import"
                                                          accelerator="CTRL+I"/>
                                                <MenuItem mnemonicParsing="false" onAction="#exportSM" text="Export"
                                                          accelerator="CTRL+E"/>
                                                <MenuItem mnemonicParsing="false" onAction="#exportSMT3d"
                                                          text="Export as t3d" accelerator="CTRL+T"/>
                                            </items>
                                        </ContextMenu>
                                    </contextMenu>
                                </TableView>
                                <TitledPane fx:id="filterPane" text="Filter">
                                    <content>
                                        <GridPane hgap="2.0" vgap="2.0">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" hgrow="NEVER"/>
                                                <ColumnConstraints hgrow="SOMETIMES"/>
                                                <ColumnConstraints hgrow="SOMETIMES" percentWidth="5.0"/>
                                                <ColumnConstraints hgrow="SOMETIMES"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                                <RowConstraints vgrow="NEVER"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="X" GridPane.rowIndex="1"/>
                                                <TextField fx:id="filterX" GridPane.columnIndex="1"
                                                           GridPane.rowIndex="1"/>
                                                <Label text="Y" GridPane.rowIndex="2"/>
                                                <TextField fx:id="filterY" GridPane.columnIndex="1"
                                                           GridPane.rowIndex="2"/>
                                                <Label text="Z" GridPane.rowIndex="3"/>
                                                <TextField fx:id="filterZ" GridPane.columnIndex="1"
                                                           GridPane.rowIndex="3"/>
                                                <Label text="Range" GridPane.rowIndex="4"/>
                                                <TextField fx:id="filterRange" GridPane.columnIndex="1"
                                                           GridPane.rowIndex="4"/>
                                                <CheckBox fx:id="rotatable" mnemonicParsing="false" text="Roatatable"
                                                          GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                                                <CheckBox fx:id="scalable" mnemonicParsing="false" text="Scalable"
                                                          GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                                                <CheckBox fx:id="rotating" mnemonicParsing="false" text="Rotating"
                                                          GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                                                <Label text="StaticMesh"/>
                                                <TextField fx:id="filterStaticMesh" GridPane.columnIndex="1"/>
                                            </children>
                                        </GridPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <TitledPane fx:id="smPane" collapsible="false" minWidth="0.0" text="StaticMeshes">
                                    <content>
                                        <GridPane hgap="2.0" vgap="2.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES"/>
                                                <ColumnConstraints hgrow="SOMETIMES"/>
                                                <ColumnConstraints hgrow="SOMETIMES"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="USX"/>
                                                <ComboBox fx:id="usxChooser" maxWidth="1.7976931348623157E308"
                                                          minWidth="0.0" GridPane.columnSpan="3" GridPane.rowIndex="1"/>
                                                <Label text="StaticMesh" GridPane.rowIndex="2"/>
                                                <ComboBox fx:id="smChooser" maxWidth="1.7976931348623157E308"
                                                          minWidth="0.0" GridPane.columnSpan="3" GridPane.rowIndex="3"/>
                                                <Button fx:id="addToUnr" maxHeight="1.7976931348623157E308"
                                                        maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                        onAction="#addStaticMeshToUnr" text="Add to &#10;Import Table"
                                                        textAlignment="CENTER" GridPane.rowIndex="4"/>
                                                <Button fx:id="createNew" maxWidth="1.7976931348623157E308"
                                                        mnemonicParsing="false" onAction="#createStaticMeshToUnr"
                                                        text="Create new &#10;StaticMeshActor" textAlignment="CENTER"
                                                        GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                                <Button fx:id="smView" maxHeight="1.7976931348623157E308"
                                                        maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                        onAction="#viewForeignStaticMesh" text="View"
                                                        textAlignment="CENTER" GridPane.columnIndex="2"
                                                        GridPane.rowIndex="4"/>
                                            </children>
                                        </GridPane>
                                    </content>
                                </TitledPane>
                                <TitledPane fx:id="smaPane" collapsible="false" minWidth="0.0"
                                            text="StaticMeshActor properties">
                                    <content>
                                        <GridPane hgap="2.0" vgap="2.0">
                                            <columnConstraints>
                                                <ColumnConstraints halignment="RIGHT" hgrow="NEVER"
                                                                   minWidth="-Infinity"/>
                                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"
                                                                   prefWidth="10000"/>
                                                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"
                                                                   prefWidth="10000"/>
                                                <ColumnConstraints halignment="LEFT" hgrow="NEVER"
                                                                   minWidth="-Infinity"/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                                <RowConstraints vgrow="SOMETIMES"/>
                                            </rowConstraints>
                                            <children>
                                                <Label text="StaticMesh"/>
                                                <ComboBox fx:id="actorStaticMeshChooser"
                                                          maxWidth="1.7976931348623157E308" minWidth="0.0"
                                                          GridPane.columnIndex="1" GridPane.columnSpan="2"/>
                                                <Button fx:id="actorStaticMeshView" mnemonicParsing="false"
                                                        onAction="#viewActorStaticMesh" text="View"
                                                        GridPane.columnIndex="3"/>
                                                <Label text="X" GridPane.rowIndex="1"/>
                                                <Label text="Y" GridPane.rowIndex="2"/>
                                                <Label text="Z" GridPane.rowIndex="3"/>
                                                <Label text="Scale3D.X" GridPane.rowIndex="4"/>
                                                <Label text="Scale3D.Y" GridPane.rowIndex="5"/>
                                                <Label text="Scale3D.Z" GridPane.rowIndex="6"/>
                                                <Label text="Scale" GridPane.rowIndex="7"/>
                                                <TextField fx:id="locationX" prefColumnCount="0"
                                                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                                <TextField fx:id="rotationPitch" prefColumnCount="0"
                                                           GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                                <TextField fx:id="locationY" prefColumnCount="0"
                                                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                                <TextField fx:id="rotationYaw" prefColumnCount="0"
                                                           GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                                                <TextField fx:id="locationZ" prefColumnCount="0"
                                                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                                <TextField fx:id="rotationRoll" prefColumnCount="0"
                                                           GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                                                <TextField fx:id="drawScale3DX" prefColumnCount="0"
                                                           GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                                <TextField fx:id="rotationPitchRate" prefColumnCount="0"
                                                           GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                                                <TextField fx:id="drawScale3DY" prefColumnCount="0"
                                                           GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                                                <TextField fx:id="rotationYawRate" prefColumnCount="0"
                                                           GridPane.columnIndex="2" GridPane.rowIndex="5"/>
                                                <TextField fx:id="drawScale3DZ" prefColumnCount="0"
                                                           GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                                                <TextField fx:id="rotationRollRate" prefColumnCount="0"
                                                           GridPane.columnIndex="2" GridPane.rowIndex="6"/>
                                                <TextField fx:id="drawScale" prefColumnCount="0"
                                                           GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                                                <TextField fx:id="zoneState" prefColumnCount="0"
                                                           GridPane.columnIndex="2" GridPane.rowIndex="7"/>
                                                <Button fx:id="copy" maxWidth="1.7976931348623157E308"
                                                        mnemonicParsing="false" onAction="#copyStaticMesh"
                                                        text="Copy Actor" GridPane.columnIndex="2"
                                                        GridPane.rowIndex="8"/>
                                                <Button fx:id="set" maxWidth="1.7976931348623157E308"
                                                        mnemonicParsing="false"
                                                        onAction="#setLocationRotationStaticMesh" text="Apply"
                                                        GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                                                <Label text="Pitch" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                                                <Label text="Yaw" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                                                <Label text="Roll" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                                                <Label text="Pitch rate" GridPane.columnIndex="3"
                                                       GridPane.rowIndex="4"/>
                                                <Label text="Yaw rate" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
                                                <Label text="Roll rate" GridPane.columnIndex="3" GridPane.rowIndex="6"/>
                                                <Label text="ZoneState" GridPane.columnIndex="3" GridPane.rowIndex="7"/>
                                            </children>
                                        </GridPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </VBox>
                    </items>
                </SplitPane>
            </children>
        </VBox>
        <ProgressIndicator fx:id="progress" progress="-1" visible="false" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
    </children>
</AnchorPane>
